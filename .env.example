# Environment Configuration Template
# Copy this file to .env and fill in your values

# Discord Configuration
# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_AVATAR_PATH=assets/bot_avatar_no_text.png
DISCORD_GUILD_ID=your_test_guild_id_optional

# LLM Configuration
LLM_API_URL=http://localhost:11434/v1/chat/completions
LLM_API_KEY=optional_api_key_if_required
LLM_MODEL_NAME=merged-sci-model-q6_k.gguf:latest
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.3
LLM_TIMEOUT=60
LLM_SYSTEM_PROMPT_FILE=system_prompt.txt

# Database Configuration
DATABASE_URL=sqlite:///./bot_conversations.db

# Conversation Management
CONVERSATION_MAX_HISTORY=25
CONVERSATION_CONTEXT_WINDOW_TOKENS=8192
CONVERSATION_AUTO_CLEANUP_DAYS=30

# Development Settings
DEBUG=false
DEV_MODE=false

# Note: Logging configuration uses defaults from the application.
# The bot will automatically use JSON format for structured logging.
# No need to specify logging variables unless overriding defaults.
