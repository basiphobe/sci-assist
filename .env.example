# Environment Configuration Template
# Copy this file to .env and fill in your values

# Discord Configuration
# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_AVATAR_PATH=assets/bot_avatar_no_text.png
DISCORD_GUILD_ID=your_test_guild_id_optional

# LLM Configuration
LLM_API_URL=http://localhost:11434/v1/chat/completions
LLM_API_KEY=optional_api_key_if_required
LLM_MODEL_NAME=merged-sci-model-q6_k.gguf:latest
LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.3
LLM_TIMEOUT=60
LLM_SYSTEM_PROMPT_FILE=system_prompt.txt

# Database Configuration
DATABASE_URL=sqlite:///./bot_conversations.db

# Conversation Management
MAX_CONVERSATION_HISTORY=25
CONTEXT_WINDOW_TOKENS=8192
AUTO_CLEANUP_DAYS=30

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=rich
# Available LOG_LEVEL options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Available LOG_FORMAT options: rich (development), json (production)
# 
# Log Levels Explained:
# - DEBUG: Detailed debugging info, HTTP requests/responses, SQL queries
# - INFO: General operational info, user interactions, API calls
# - WARNING: Non-critical issues, failed retries, configuration warnings
# - ERROR: Error conditions that affect functionality
# - CRITICAL: Severe errors that may cause the bot to stop
#
# Log Formats:
# - rich: Colorized, human-readable logs for development
# - json: Structured JSON logs for production log aggregation

# Development Settings
DEBUG=false
DEV_MODE=false
